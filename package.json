{
  "name": "node-graphq-base",
  "version": "0.0.1",
  "description": "A starter for Node-Apollo-GraphQL projects",
  "main": "server.js",
  "engines": {
    "node": "v8.11.1"
  },
  "scripts": {
    "lint": "tslint",
    "build:tsc": "tsc",
    "start": "npm run build:tsc && node index.js",
    "start-dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "public",
      ".env"
    ],
    "exec": "npm run server",
    "ext": "ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "body-parser": "^1.19.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
