{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es2017",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["es2017"],
    "plugins": [{ "name": "tslint-language-service" }],
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@models": ["models/index"],
      "@models/*": ["models/*"],
      "@server": ["server/index"],
      "@tests": ["../tests"],
      "@db": ["db/index"],
      "@db/*": ["db/*"],
      "@config": ["config/index"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "test", "dist"]
}